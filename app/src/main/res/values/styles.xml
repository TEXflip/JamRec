<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@color/Background</item>
        <item name="colorPrimary">@color/SecondBackground</item>
        <item name="colorPrimaryDark">@color/Background</item>
        <item name="android:windowBackground">@color/Background</item>
        <item name="android:textColorPrimary">@color/MainForeground</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/menu_enter</item>
        <item name="android:windowExitAnimation">@anim/menu_exit</item>
        <item name="colorPrimaryDark">@color/SecondBackground</item>
        <item name="android:windowBackground">@color/SecondBackground</item>
        <item name="android:textColorPrimary">@color/MainForeground</item>
    </style>

</resources>
